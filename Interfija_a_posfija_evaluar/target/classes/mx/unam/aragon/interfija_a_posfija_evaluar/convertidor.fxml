            prefWidth="400" prefHeight="250" style="-fx-padding:20;">
    <children>
        <Label text="Conversión Infija → Posfija" layoutX="90" layoutY="20" style="-fx-font-size:16px; -fx-font-weight:bold;"/>
        <Label text="Expresión infija:" layoutX="40" layoutY="80"/>
        <TextField fx:id="txtInfija" layoutX="150" layoutY="75" prefWidth="200"/>
